  <body
    class="body"
    onload="NextQuestion(0)"
    style="background-color: rgb(0, 0, 0)"
  >
    <div class="top">
      <div class="home">
        <h1>INSIDE BRAIN</h1>
      </div>
      <h1 class="head">
        <strong
          ><q
            >let us now <br />
            what's in your <br />
            brain</q
          ></strong
        >
      </h1>
    </div>
    <div class="quiz">
      <div>
        <!-- question box -->
        <div class="question-box">
          <h1 id="display-question"></h1>
        </div>
        <!-- question box  ends -->

        <!-- answers box -->
        <div class="answer-box">
          <!-- box if they do not select an option -->
          <div class="no-options-box" id="no-option-box">
            <div class="no-option-box">
              <h1>Please Pick An Option</h1>

              <div class="continue-button">
                <button onclick="closeNoOptionBox()">Continue</button>
              </div>
            </div>
          </div>
          <!-- box if they do not select an option ends -->
          <span>
            <input
              type="radio"
              id="option-one"
